class Solution {
    public int numSteps(String s) {
        int steps = 0;
        int carry = 0;
        
        for (int i = s.length() - 1; i > 0; i--) {
            int bit = (s.charAt(i) - '0') + carry;
            
            if (bit % 2 == 0) {
                steps++;
            } else {
                carry = 1;
                steps += 2;
            }
        }
        
        steps += carry;
        
        return steps;
    }
}
