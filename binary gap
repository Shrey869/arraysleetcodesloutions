class Solution {
    public int binaryGap(int n) {
        int maxlength = 0;
        int current = 0 , previous = -1 ;
        while(n>0){
            if((n&1) == 1){
                if(previous  !=-1) maxlength = Math.max(maxlength , current - previous);
                previous = current;
            }
            current++;
            n>>=1;
        }
        return maxlength;
    }
}
